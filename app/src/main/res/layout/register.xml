<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202">

    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Bạn đã có tài khoản ?"
        android:textColor="#959595"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_register_register"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/btn_register_register"
        app:layout_constraintTop_toBottomOf="@+id/btn_register_register" />

    <EditText
        android:id="@+id/ed_Register_RePassword"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botron"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/ed_Register_Password"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mật khẩu"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/ed_Register_Taikhoan"
        app:layout_constraintTop_toBottomOf="@+id/ed_Register_Taikhoan" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập lại mật khẩu"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/ed_Register_Password"
        app:layout_constraintTop_toBottomOf="@+id/ed_Register_Password" />

    <EditText
        android:id="@+id/ed_Register_Taikhoan"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botron"
        android:backgroundTint="#FAFAF6F6"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FA0B0A0A"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="92dp"
        android:text="Đăng Kí"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="280dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFB800"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/ed_Register_RePassword"
        app:layout_constraintStart_toStartOf="@+id/ed_Register_RePassword"
        app:layout_constraintTop_toBottomOf="@+id/ed_Register_RePassword" />

    <EditText
        android:id="@+id/ed_Register_Password"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botron"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/ed_Register_Taikhoan"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>